# Database
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/careops_db

# Auth
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
FRONTEND_URL=http://localhost:5173

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/oauth/google/callback

# Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Email/SMTP (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Token lifetimes
EMAIL_TOKEN_EXPIRE_HOURS=24
INVITATION_TOKEN_EXPIRE_DAYS=7

# Communication encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
COMMUNICATION_ENCRYPTION_KEY=your-32-byte-base64-encoded-key
